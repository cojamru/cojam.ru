link(rel='shortcut icon' href=`../img/${URLs.favicon}`)

meta(name='theme-color' content=`${primeColor}`)
meta(name='viewport' content='width=device-width, initial-scale=1.0, minimum-scale=1.0, maximum-scale=1.0, user-scalable=no')

each cojamMeta in [{ name: 'version', content: `${VERSION}` }, { name: 'prime-color', content: `${primeColor}` }, { name: 'cdn-link', content: `${URLs.CDN}` }]
	meta(name=`_cojam:${cojamMeta.name}` content=`${cojamMeta.content}`)

each URL in [`${URLs.CDN.replace('https://', '')}`, 'fonts.gstatic.com']
	link(rel='preconnect' href=`//${URL}`)

each URL in ['www.google-analytics.com', 'mc.yandex.ru']
	link(rel='dns-prefetch' href=`//${URL}`)
